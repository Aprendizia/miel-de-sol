<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %> | Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>üçØ</text></svg>">
    <%- include('../partials/admin-styles') %>
</head>
<body>
    <%- include('../partials/admin-sidebar', { activePage: 'users' }) %>

    <div class="main-content">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <a href="/admin/users" class="text-muted text-decoration-none mb-2 d-inline-block">
                    <i class="fas fa-arrow-left me-1"></i> Volver a usuarios
                </a>
                <h2 class="mb-0"><%= user.full_name || user.email %></h2>
            </div>
            <div>
                <% if (user.is_blocked) { %>
                    <span class="badge bg-danger fs-6">Bloqueado</span>
                <% } %>
                <span class="badge bg-<%= user.role === 'admin' ? 'primary' : 'secondary' %> fs-6 ms-1">
                    <%= user.role === 'admin' ? 'Admin' : 'Cliente' %>
                </span>
            </div>
        </div>

        <div class="row g-4">
            <!-- User Info -->
            <div class="col-lg-4">
                <div class="table-card mb-4">
                    <div class="text-center mb-4">
                        <div class="bg-<%= user.role === 'admin' ? 'primary' : 'warning' %> text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px; font-size: 2rem;">
                            <i class="fas fa-user"></i>
                        </div>
                        <h5><%= user.full_name || 'Sin nombre' %></h5>
                        <p class="text-muted mb-0"><%= user.email %></p>
                    </div>
                    
                    <hr>
                    
                    <div class="row text-center">
                        <div class="col-6 border-end">
                            <h4 class="mb-0"><%= user.total_orders || 0 %></h4>
                            <small class="text-muted">Pedidos</small>
                        </div>
                        <div class="col-6">
                            <h4 class="mb-0">$<%= (user.total_spent || 0).toLocaleString('es-MX') %></h4>
                            <small class="text-muted">Total Gastado</small>
                        </div>
                    </div>
                </div>

                <div class="table-card mb-4">
                    <h6 class="mb-3"><i class="fas fa-info-circle me-2"></i>Informaci√≥n</h6>
                    <p class="mb-2"><strong>Tel√©fono:</strong> <%= user.phone || 'No registrado' %></p>
                    <p class="mb-2"><strong>Registro:</strong> <%= new Date(user.created_at).toLocaleString('es-MX') %></p>
                    <% if (user.notes) { %>
                    <p class="mb-0"><strong>Notas:</strong><br><small class="text-muted"><%= user.notes %></small></p>
                    <% } %>
                </div>

                <!-- Block/Unblock -->
                <div class="table-card">
                    <h6 class="mb-3"><i class="fas fa-ban me-2"></i>Acciones</h6>
                    <form action="/admin/users/<%= user.id %>/toggle-block" method="POST">
                        <input type="hidden" name="blocked" value="<%= user.is_blocked ? 'false' : 'true' %>">
                        
                        <% if (!user.is_blocked) { %>
                        <div class="mb-3">
                            <label class="form-label">Motivo del bloqueo</label>
                            <textarea name="notes" class="form-control" rows="2" placeholder="Raz√≥n del bloqueo..."></textarea>
                        </div>
                        <% } %>
                        
                        <button type="submit" class="btn btn-<%= user.is_blocked ? 'success' : 'danger' %> w-100" onclick="return confirm('<%= user.is_blocked ? '¬øDesbloquear' : '¬øBloquear' %> este usuario?')">
                            <i class="fas fa-<%= user.is_blocked ? 'unlock' : 'lock' %> me-2"></i>
                            <%= user.is_blocked ? 'Desbloquear Usuario' : 'Bloquear Usuario' %>
                        </button>
                    </form>
                </div>
            </div>

            <!-- Orders & Addresses -->
            <div class="col-lg-8">
                <!-- Recent Orders -->
                <div class="table-card mb-4">
                    <h5 class="mb-4"><i class="fas fa-shopping-bag me-2"></i>Pedidos Recientes</h5>
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Pedido</th>
                                    <th>Total</th>
                                    <th>Estado</th>
                                    <th>Fecha</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (user.orders && user.orders.length > 0) { %>
                                    <% user.orders.forEach(order => { %>
                                    <tr>
                                        <td><strong>#<%= order.order_number %></strong></td>
                                        <td>$<%= parseFloat(order.total).toFixed(2) %></td>
                                        <td>
                                            <span class="badge bg-<%= 
                                                order.status === 'delivered' ? 'success' : 
                                                order.status === 'shipped' ? 'info' : 
                                                order.status === 'cancelled' ? 'danger' : 'warning' 
                                            %>">
                                                <%= order.status %>
                                            </span>
                                        </td>
                                        <td><%= new Date(order.created_at).toLocaleDateString('es-MX') %></td>
                                        <td>
                                            <a href="/admin/orders/<%= order.id %>" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="5" class="text-center text-muted py-3">Sin pedidos</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Addresses -->
                <div class="table-card">
                    <h5 class="mb-4"><i class="fas fa-map-marker-alt me-2"></i>Direcciones Guardadas</h5>
                    <% if (user.addresses && user.addresses.length > 0) { %>
                        <div class="row g-3">
                            <% user.addresses.forEach(addr => { %>
                            <div class="col-md-6">
                                <div class="border rounded p-3">
                                    <div class="d-flex justify-content-between mb-2">
                                        <strong><%= addr.label || 'Direcci√≥n' %></strong>
                                        <% if (addr.is_default) { %>
                                        <span class="badge bg-primary">Principal</span>
                                        <% } %>
                                    </div>
                                    <p class="mb-1 small"><%= addr.street_address || addr.street %></p>
                                    <p class="mb-1 small"><%= addr.city %>, <%= addr.state %></p>
                                    <p class="mb-0 small">CP: <%= addr.postal_code %></p>
                                </div>
                            </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <p class="text-muted text-center py-3">Sin direcciones guardadas</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/admin-scripts') %>
</body>
</html>
