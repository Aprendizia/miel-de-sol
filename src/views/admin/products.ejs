<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %> | Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>üçØ</text></svg>">
    <%- include('../partials/admin-styles') %>
</head>
<body>
    <%- include('../partials/admin-sidebar', { activePage: 'products' }) %>

    <div class="main-content">
        <%- include('../partials/admin-header', { title: 'Productos' }) %>

        <!-- Actions Bar -->
        <div class="d-flex flex-wrap justify-content-between align-items-center mb-4 gap-3">
            <a href="/admin/products/new" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Nuevo Producto
            </a>
            
            <!-- Filters -->
            <form action="/admin/products" method="GET" class="d-flex flex-wrap gap-2 align-items-center">
                <div class="input-group" style="width: auto;">
                    <input type="text" name="search" class="form-control" placeholder="Buscar..." 
                           value="<%= filters.search || '' %>" style="min-width: 200px;">
                    <button class="btn btn-outline-secondary" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
                
                <select name="category" class="form-select" style="width: auto;" onchange="this.form.submit()">
                    <option value="">Todas las categor√≠as</option>
                    <% categories.forEach(cat => { %>
                    <option value="<%= cat.id %>" <%= filters.category === cat.id ? 'selected' : '' %>><%= cat.name %></option>
                    <% }) %>
                </select>
                
                <select name="status" class="form-select" style="width: auto;" onchange="this.form.submit()">
                    <option value="">Todos los estados</option>
                    <option value="active" <%= filters.status === 'active' ? 'selected' : '' %>>Activos</option>
                    <option value="inactive" <%= filters.status === 'inactive' ? 'selected' : '' %>>Inactivos</option>
                </select>
                
                <% if (filters.search || filters.category || filters.status) { %>
                <a href="/admin/products" class="btn btn-outline-secondary">
                    <i class="fas fa-times"></i> Limpiar
                </a>
                <% } %>
            </form>
        </div>

        <!-- Products Table -->
        <div class="table-card">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th style="width: 60px;">Imagen</th>
                            <th>Producto</th>
                            <th>Categor√≠a</th>
                            <th>Precio</th>
                            <th style="width: 100px;">Stock</th>
                            <th style="width: 100px;">Estado</th>
                            <th style="width: 150px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach(product => { %>
                        <tr>
                            <td>
                                <img src="<%= product.image_url || '/assets/img/products/product-1.png' %>" 
                                     alt="<%= product.name %>" 
                                     class="product-img"
                                     onerror="this.src='/assets/img/products/product-1.png'">
                            </td>
                            <td>
                                <strong><%= product.name %></strong>
                                <br>
                                <small class="text-muted">
                                    SKU: <%= product.sku || 'N/A' %>
                                    <% if (product.is_featured) { %>
                                    <span class="badge bg-warning ms-1">‚≠ê Destacado</span>
                                    <% } %>
                                </small>
                            </td>
                            <td><%= product.categories?.name || 'Sin categor√≠a' %></td>
                            <td>
                                <% if (product.sale_price) { %>
                                    <span class="text-success fw-bold">$<%= parseFloat(product.sale_price).toFixed(2) %></span>
                                    <br><small class="text-muted text-decoration-line-through">$<%= parseFloat(product.price).toFixed(2) %></small>
                                <% } else { %>
                                    <span class="fw-bold">$<%= parseFloat(product.price).toFixed(2) %></span>
                                <% } %>
                            </td>
                            <td>
                                <input type="number" class="form-control form-control-sm stock-input" 
                                       value="<%= product.stock_quantity %>" 
                                       data-product-id="<%= product.id %>"
                                       min="0" 
                                       style="width: 70px;"
                                       <%= isDemoMode ? 'disabled' : '' %>>
                            </td>
                            <td>
                                <div class="form-check form-switch">
                                    <input class="form-check-input toggle-active" 
                                           type="checkbox" 
                                           data-product-id="<%= product.id %>"
                                           <%= product.is_active ? 'checked' : '' %>
                                           <%= isDemoMode ? 'disabled' : '' %>>
                                </div>
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a href="/admin/products/<%= product.id %>/edit" 
                                       class="btn btn-sm btn-outline-primary" 
                                       title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="/shop/product/<%= product.slug %>" 
                                       target="_blank"
                                       class="btn btn-sm btn-outline-secondary" 
                                       title="Ver en tienda">
                                        <i class="fas fa-external-link-alt"></i>
                                    </a>
                                    <button type="button" 
                                            class="btn btn-sm btn-outline-danger delete-product" 
                                            data-product-id="<%= product.id %>"
                                            data-product-name="<%= product.name %>"
                                            title="Eliminar"
                                            <%= isDemoMode ? 'disabled' : '' %>>
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                        <% if (products.length === 0) { %>
                        <tr>
                            <td colspan="7" class="text-center py-5">
                                <i class="fas fa-box-open text-muted mb-3" style="font-size: 3rem;"></i>
                                <p class="text-muted mb-3">No se encontraron productos</p>
                                <a href="/admin/products/new" class="btn btn-primary">
                                    <i class="fas fa-plus me-2"></i>Crear primer producto
                                </a>
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            
            <!-- Pagination -->
            <% if (pagination.totalPages > 1) { %>
            <nav class="mt-4">
                <ul class="pagination justify-content-center mb-0">
                    <li class="page-item <%= !pagination.hasPrev ? 'disabled' : '' %>">
                        <a class="page-link" href="?page=<%= pagination.page - 1 %>&search=<%= filters.search || '' %>&category=<%= filters.category || '' %>&status=<%= filters.status || '' %>">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>
                    
                    <% for (let i = 1; i <= pagination.totalPages; i++) { %>
                        <% if (i === 1 || i === pagination.totalPages || (i >= pagination.page - 2 && i <= pagination.page + 2)) { %>
                        <li class="page-item <%= pagination.page === i ? 'active' : '' %>">
                            <a class="page-link" href="?page=<%= i %>&search=<%= filters.search || '' %>&category=<%= filters.category || '' %>&status=<%= filters.status || '' %>"><%= i %></a>
                        </li>
                        <% } else if (i === pagination.page - 3 || i === pagination.page + 3) { %>
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                        <% } %>
                    <% } %>
                    
                    <li class="page-item <%= !pagination.hasNext ? 'disabled' : '' %>">
                        <a class="page-link" href="?page=<%= pagination.page + 1 %>&search=<%= filters.search || '' %>&category=<%= filters.category || '' %>&status=<%= filters.status || '' %>">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
            <% } %>
            
            <div class="text-center text-muted mt-3">
                <small>Mostrando <%= products.length %> de <%= pagination.total %> productos</small>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmar Eliminaci√≥n</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>¬øEst√°s seguro de que deseas eliminar el producto <strong id="deleteProductName"></strong>?</p>
                    <p class="text-danger"><small>Esta acci√≥n no se puede deshacer.</small></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <form id="deleteForm" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/admin-scripts') %>
    
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Quick stock update
        document.querySelectorAll('.stock-input').forEach(input => {
            input.addEventListener('change', async function() {
                const productId = this.dataset.productId;
                const value = parseInt(this.value);
                
                try {
                    const response = await fetch(`/admin/products/${productId}/quick-update`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ field: 'stock_quantity', value })
                    });
                    
                    const result = await response.json();
                    if (result.success) {
                        showToast('Stock actualizado', 'success');
                    } else {
                        showToast('Error: ' + result.error, 'error');
                    }
                } catch (e) {
                    showToast('Error al actualizar', 'error');
                }
            });
        });
        
        // Toggle active status
        document.querySelectorAll('.toggle-active').forEach(toggle => {
            toggle.addEventListener('change', async function() {
                const productId = this.dataset.productId;
                const value = this.checked;
                
                try {
                    const response = await fetch(`/admin/products/${productId}/quick-update`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ field: 'is_active', value })
                    });
                    
                    const result = await response.json();
                    if (result.success) {
                        showToast(value ? 'Producto activado' : 'Producto desactivado', 'success');
                    } else {
                        showToast('Error: ' + result.error, 'error');
                        this.checked = !value; // Revert
                    }
                } catch (e) {
                    showToast('Error al actualizar', 'error');
                    this.checked = !value; // Revert
                }
            });
        });
        
        // Delete confirmation
        document.querySelectorAll('.delete-product').forEach(btn => {
            btn.addEventListener('click', function() {
                const productId = this.dataset.productId;
                const productName = this.dataset.productName;
                
                document.getElementById('deleteProductName').textContent = productName;
                document.getElementById('deleteForm').action = `/admin/products/${productId}/delete`;
                
                new bootstrap.Modal(document.getElementById('deleteModal')).show();
            });
        });
    });
    </script>
</body>
</html>
