<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %> | Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>üçØ</text></svg>">
    <%- include('../partials/admin-styles') %>
</head>
<body>
    <%- include('../partials/admin-sidebar', { activePage: 'shipping' }) %>

    <div class="main-content">
        <%- include('../partials/admin-header', { title: 'Configuraci√≥n de Env√≠os' }) %>

        <div class="row g-4">
            <!-- Create Zone -->
            <div class="col-lg-4">
                <div class="table-card mb-4">
                    <h5 class="mb-4"><i class="fas fa-plus-circle me-2"></i>Nueva Zona de Env√≠o</h5>
                    
                    <form action="/admin/shipping/zones" method="POST">
                        <div class="mb-3">
                            <label class="form-label">Nombre de la Zona *</label>
                            <input type="text" name="name" class="form-control" required 
                                   placeholder="Ej: CDMX y √Årea Metropolitana">
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Estados que cubre *</label>
                            <select name="states" class="form-select" multiple size="8" required>
                                <% states.forEach(state => { %>
                                <option value="<%= state %>"><%= state %></option>
                                <% }) %>
                            </select>
                            <small class="text-muted">Mant√©n Ctrl/Cmd para seleccionar varios</small>
                        </div>
                        
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-plus me-2"></i>Crear Zona
                        </button>
                    </form>
                </div>

                <!-- Add Rate -->
                <div class="table-card">
                    <h5 class="mb-4"><i class="fas fa-truck me-2"></i>Nueva Tarifa</h5>
                    
                    <form action="/admin/shipping/rates" method="POST">
                        <div class="mb-3">
                            <label class="form-label">Zona *</label>
                            <select name="zone_id" class="form-select" required>
                                <option value="">Seleccionar zona...</option>
                                <% zones.forEach(zone => { %>
                                <option value="<%= zone.id %>"><%= zone.name %></option>
                                <% }) %>
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Nombre *</label>
                            <input type="text" name="name" class="form-control" required 
                                   placeholder="Ej: Est√°ndar, Express">
                        </div>
                        
                        <div class="row g-2 mb-3">
                            <div class="col-6">
                                <label class="form-label">Precio *</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input type="number" name="price" class="form-control" required min="0" step="0.01">
                                </div>
                            </div>
                            <div class="col-6">
                                <label class="form-label">Gratis desde</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input type="number" name="free_threshold" class="form-control" min="0" step="0.01">
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Tiempo Estimado</label>
                            <input type="text" name="estimated_days" class="form-control" 
                                   placeholder="Ej: 3-5 d√≠as h√°biles">
                        </div>
                        
                        <button type="submit" class="btn btn-success w-100">
                            <i class="fas fa-plus me-2"></i>Agregar Tarifa
                        </button>
                    </form>
                </div>
            </div>

            <!-- Zones List -->
            <div class="col-lg-8">
                <div class="table-card">
                    <h5 class="mb-4"><i class="fas fa-map me-2"></i>Zonas de Env√≠o</h5>
                    
                    <% if (zones.length > 0) { %>
                        <% zones.forEach(zone => { %>
                        <div class="border rounded p-3 mb-3">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h6 class="mb-1"><%= zone.name %></h6>
                                    <small class="text-muted">
                                        <i class="fas fa-map-marker-alt me-1"></i>
                                        <%= zone.states ? zone.states.slice(0, 3).join(', ') : 'Sin estados' %>
                                        <% if (zone.states && zone.states.length > 3) { %>
                                        y <%= zone.states.length - 3 %> m√°s
                                        <% } %>
                                    </small>
                                </div>
                                <span class="badge bg-<%= zone.is_active ? 'success' : 'secondary' %>">
                                    <%= zone.is_active ? 'Activa' : 'Inactiva' %>
                                </span>
                            </div>
                            
                            <!-- Rates for this zone -->
                            <% if (zone.rates && zone.rates.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-sm table-striped mb-0">
                                    <thead>
                                        <tr>
                                            <th>M√©todo</th>
                                            <th>Precio</th>
                                            <th>Env√≠o Gratis Desde</th>
                                            <th>Tiempo</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% zone.rates.forEach(rate => { %>
                                        <tr>
                                            <td><strong><%= rate.name %></strong></td>
                                            <td>$<%= parseFloat(rate.price).toFixed(2) %></td>
                                            <td>
                                                <% if (rate.free_threshold || rate.free_shipping_threshold) { %>
                                                    $<%= (rate.free_threshold || rate.free_shipping_threshold) %>+
                                                <% } else { %>
                                                    -
                                                <% } %>
                                            </td>
                                            <td><%= rate.estimated_days || '-' %></td>
                                        </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                            <% } else { %>
                            <p class="text-muted text-center mb-0 py-2">
                                <i class="fas fa-info-circle me-1"></i>Sin tarifas configuradas
                            </p>
                            <% } %>
                        </div>
                        <% }) %>
                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="fas fa-shipping-fast text-muted mb-3" style="font-size: 3rem;"></i>
                            <p class="text-muted">No hay zonas de env√≠o configuradas</p>
                            <p class="small text-muted">Crea una zona y luego a√±ade tarifas de env√≠o</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/admin-scripts') %>
</body>
</html>
