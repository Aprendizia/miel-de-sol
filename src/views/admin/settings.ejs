<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %> | Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'></text></svg>">
    <%- include('../partials/admin-styles') %>
</head>
<body class="<%= typeof darkMode !== 'undefined' && darkMode ? 'dark-mode' : '' %>">
    <%- include('../partials/admin-sidebar', { activePage: 'settings' }) %>

    <div class="main-content">
        <%- include('../partials/admin-header', { title: 'Configuraci贸n' }) %>

        <div class="row g-4">
            <!-- General Settings -->
            <div class="col-lg-6">
                <div class="table-card">
                    <h5 class="mb-4"><i class="fas fa-store me-2"></i>Informaci贸n de la Tienda</h5>
                    
                    <form action="/admin/settings" method="POST">
                        <input type="hidden" name="key" value="general">
                        
                        <div class="mb-3">
                            <label class="form-label">Nombre de la Tienda</label>
                            <input type="text" class="form-control" id="storeName" 
                                   value="<%= settings.general?.store_name || 'El Rinc贸n de la Miel' %>">
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Email de Contacto</label>
                            <input type="email" class="form-control" id="storeEmail" 
                                   value="<%= settings.general?.email || 'contacto@rincondelamiel.com' %>">
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Tel茅fono</label>
                            <input type="text" class="form-control" id="storePhone" 
                                   value="<%= settings.general?.phone || '' %>">
                        </div>
                        
                        <div class="row g-2 mb-3">
                            <div class="col-6">
                                <label class="form-label">Moneda</label>
                                <select class="form-select" id="storeCurrency">
                                    <option value="MXN" <%= settings.general?.currency === 'MXN' ? 'selected' : '' %>>MXN - Peso Mexicano</option>
                                    <option value="USD" <%= settings.general?.currency === 'USD' ? 'selected' : '' %>>USD - D贸lar</option>
                                </select>
                            </div>
                            <div class="col-6">
                                <label class="form-label">Zona Horaria</label>
                                <select class="form-select" id="storeTimezone">
                                    <option value="America/Mexico_City">CDMX</option>
                                    <option value="America/Tijuana">Tijuana</option>
                                    <option value="America/Cancun">Canc煤n</option>
                                </select>
                            </div>
                        </div>
                        
                        <button type="submit" class="btn btn-primary" onclick="saveGeneralSettings(event)">
                            <i class="fas fa-save me-2"></i>Guardar
                        </button>
                    </form>
                </div>
            </div>

            <!-- SEO Settings -->
            <div class="col-lg-6">
                <div class="table-card">
                    <h5 class="mb-4"><i class="fas fa-search me-2"></i>SEO</h5>
                    
                    <form action="/admin/settings" method="POST">
                        <input type="hidden" name="key" value="seo">
                        
                        <div class="mb-3">
                            <label class="form-label">Meta T铆tulo</label>
                            <input type="text" class="form-control" id="seoTitle" maxlength="60"
                                   value="<%= settings.seo?.meta_title || 'El Rinc贸n de la Miel - Miel Artesanal Mexicana' %>">
                            <small class="text-muted">M谩x 60 caracteres</small>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Meta Descripci贸n</label>
                            <textarea class="form-control" id="seoDescription" rows="3" maxlength="160"><%= settings.seo?.meta_description || '' %></textarea>
                            <small class="text-muted">M谩x 160 caracteres</small>
                        </div>
                        
                        <button type="submit" class="btn btn-primary" onclick="saveSeoSettings(event)">
                            <i class="fas fa-save me-2"></i>Guardar SEO
                        </button>
                    </form>
                    
                    <hr class="my-4">
                    
                    <h6>Archivos SEO</h6>
                    <div class="d-flex gap-2">
                        <a href="/sitemap.xml" target="_blank" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-sitemap me-1"></i>Sitemap.xml
                        </a>
                        <a href="/robots.txt" target="_blank" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-robot me-1"></i>Robots.txt
                        </a>
                    </div>
                </div>
            </div>

            <!-- Notifications -->
            <div class="col-lg-6">
                <div class="table-card">
                    <h5 class="mb-4"><i class="fas fa-bell me-2"></i>Notificaciones</h5>
                    
                    <form action="/admin/settings" method="POST">
                        <input type="hidden" name="key" value="notifications">
                        
                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" id="notifyOrders" 
                                   <%= settings.notifications?.order_email !== false ? 'checked' : '' %>>
                            <label class="form-check-label" for="notifyOrders">
                                Email al recibir nuevos pedidos
                            </label>
                        </div>
                        
                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" id="notifyLowStock" 
                                   <%= settings.notifications?.low_stock_email !== false ? 'checked' : '' %>>
                            <label class="form-check-label" for="notifyLowStock">
                                Alertas de stock bajo
                            </label>
                        </div>
                        
                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" id="newsletterEnabled" 
                                   <%= settings.notifications?.newsletter_enabled !== false ? 'checked' : '' %>>
                            <label class="form-check-label" for="newsletterEnabled">
                                Newsletter habilitado
                            </label>
                        </div>
                        
                        <button type="submit" class="btn btn-primary" onclick="saveNotificationSettings(event)">
                            <i class="fas fa-save me-2"></i>Guardar
                        </button>
                    </form>
                </div>
            </div>

            <!-- Theme / Dark Mode -->
            <div class="col-lg-6">
                <div class="table-card">
                    <h5 class="mb-4"><i class="fas fa-palette me-2"></i>Apariencia</h5>
                    
                    <div class="mb-4">
                        <label class="form-label">Tema del Admin</label>
                        <div class="btn-group w-100" role="group">
                            <input type="radio" class="btn-check" name="theme" id="themeLight" value="light" checked>
                            <label class="btn btn-outline-primary" for="themeLight">
                                <i class="fas fa-sun me-1"></i>Claro
                            </label>
                            
                            <input type="radio" class="btn-check" name="theme" id="themeDark" value="dark">
                            <label class="btn btn-outline-primary" for="themeDark">
                                <i class="fas fa-moon me-1"></i>Oscuro
                            </label>
                            
                            <input type="radio" class="btn-check" name="theme" id="themeAuto" value="auto">
                            <label class="btn btn-outline-primary" for="themeAuto">
                                <i class="fas fa-adjust me-1"></i>Auto
                            </label>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Color Principal</label>
                        <div class="d-flex gap-2">
                            <input type="color" class="form-control form-control-color" value="#f4a700" title="Color primario">
                            <span class="align-self-center text-muted">#f4a700</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Danger Zone -->
            <div class="col-12">
                <div class="table-card border-danger">
                    <h5 class="mb-4 text-danger"><i class="fas fa-exclamation-triangle me-2"></i>Zona de Peligro</h5>
                    
                    <div class="row g-3">
                        <div class="col-md-4">
                            <h6>Exportar Datos</h6>
                            <p class="small text-muted">Descarga un backup de todos los datos</p>
                            <button class="btn btn-outline-primary btn-sm" onclick="alert('Funci贸n en desarrollo')">
                                <i class="fas fa-download me-1"></i>Exportar Backup
                            </button>
                        </div>
                        <div class="col-md-4">
                            <h6>Limpiar Cach茅</h6>
                            <p class="small text-muted">Elimina archivos temporales</p>
                            <button class="btn btn-outline-warning btn-sm" onclick="alert('Cach茅 limpiado')">
                                <i class="fas fa-broom me-1"></i>Limpiar Cach茅
                            </button>
                        </div>
                        <div class="col-md-4">
                            <h6>Modo Mantenimiento</h6>
                            <p class="small text-muted">Desactiva la tienda temporalmente</p>
                            <button class="btn btn-outline-danger btn-sm" onclick="alert('Funci贸n en desarrollo')">
                                <i class="fas fa-tools me-1"></i>Activar Mantenimiento
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/admin-scripts') %>
    
    <script>
    // Theme toggle
    document.querySelectorAll('input[name="theme"]').forEach(input => {
        input.addEventListener('change', function() {
            document.body.classList.remove('dark-mode');
            if (this.value === 'dark') {
                document.body.classList.add('dark-mode');
            } else if (this.value === 'auto') {
                if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
                    document.body.classList.add('dark-mode');
                }
            }
            localStorage.setItem('admin-theme', this.value);
        });
    });
    
    // Load saved theme
    const savedTheme = localStorage.getItem('admin-theme') || 'light';
    document.getElementById('theme' + savedTheme.charAt(0).toUpperCase() + savedTheme.slice(1)).checked = true;
    
    function saveGeneralSettings(e) {
        e.preventDefault();
        const value = JSON.stringify({
            store_name: document.getElementById('storeName').value,
            email: document.getElementById('storeEmail').value,
            phone: document.getElementById('storePhone').value,
            currency: document.getElementById('storeCurrency').value,
            timezone: document.getElementById('storeTimezone').value
        });
        document.querySelector('input[name="value"]')?.remove();
        e.target.closest('form').insertAdjacentHTML('beforeend', `<input type="hidden" name="value" value='${value}'>`);
        e.target.closest('form').submit();
    }
    
    function saveSeoSettings(e) {
        e.preventDefault();
        const value = JSON.stringify({
            meta_title: document.getElementById('seoTitle').value,
            meta_description: document.getElementById('seoDescription').value
        });
        e.target.closest('form').querySelector('input[name="value"]')?.remove();
        e.target.closest('form').insertAdjacentHTML('beforeend', `<input type="hidden" name="value" value='${value}'>`);
        e.target.closest('form').submit();
    }
    
    function saveNotificationSettings(e) {
        e.preventDefault();
        const value = JSON.stringify({
            order_email: document.getElementById('notifyOrders').checked,
            low_stock_email: document.getElementById('notifyLowStock').checked,
            newsletter_enabled: document.getElementById('newsletterEnabled').checked
        });
        e.target.closest('form').querySelector('input[name="value"]')?.remove();
        e.target.closest('form').insertAdjacentHTML('beforeend', `<input type="hidden" name="value" value='${value}'>`);
        e.target.closest('form').submit();
    }
    </script>
</body>
</html>
