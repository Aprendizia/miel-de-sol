<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %> | Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="shortcut icon" href="/assets/icon/favicon.png">
    <%- include('../partials/admin-styles') %>
</head>
<body>
    <%- include('../partials/admin-sidebar', { activePage: 'users' }) %>

    <div class="main-content">
        <%- include('../partials/admin-header', { title: 'Usuarios' }) %>

        <!-- Stats -->
        <div class="row g-3 mb-4">
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1">Total Clientes</p>
                            <h3><%= stats.total %></h3>
                        </div>
                        <div class="icon" style="background: rgba(13,110,253,0.1); color: #0d6efd;">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1">Activos</p>
                            <h3 class="text-success"><%= stats.active %></h3>
                        </div>
                        <div class="icon" style="background: rgba(40,167,69,0.1); color: #28a745;">
                            <i class="fas fa-user-check"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1">Bloqueados</p>
                            <h3 class="text-danger"><%= stats.blocked %></h3>
                        </div>
                        <div class="icon" style="background: rgba(220,53,69,0.1); color: #dc3545;">
                            <i class="fas fa-user-slash"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1">Nuevos este mes</p>
                            <h3 class="text-primary">+<%= stats.newThisMonth %></h3>
                        </div>
                        <div class="icon" style="background: rgba(244,167,0,0.1); color: #f4a700;">
                            <i class="fas fa-user-plus"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filters -->
        <div class="table-card mb-4">
            <form action="/admin/users" method="GET" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label small text-muted">Buscar</label>
                    <input type="text" name="search" class="form-control" 
                           placeholder="Email, nombre..." value="<%= filters.search || '' %>">
                </div>
                <div class="col-md-2">
                    <label class="form-label small text-muted">Rol</label>
                    <select name="role" class="form-select">
                        <option value="">Todos</option>
                        <option value="customer" <%= filters.role === 'customer' ? 'selected' : '' %>>Clientes</option>
                        <option value="admin" <%= filters.role === 'admin' ? 'selected' : '' %>>Admins</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label small text-muted">Estado</label>
                    <select name="blocked" class="form-select">
                        <option value="">Todos</option>
                        <option value="false" <%= filters.blocked === 'false' ? 'selected' : '' %>>Activos</option>
                        <option value="true" <%= filters.blocked === 'true' ? 'selected' : '' %>>Bloqueados</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-1"></i>Filtrar
                    </button>
                </div>
            </form>
        </div>

        <!-- Users Table -->
        <div class="table-card">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Usuario</th>
                            <th>Tel√©fono</th>
                            <th>Rol</th>
                            <th>Pedidos</th>
                            <th>Total Gastado</th>
                            <th>Estado</th>
                            <th>Registro</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                        <tr class="<%= user.is_blocked ? 'table-danger' : '' %>">
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-<%= user.role === 'admin' ? 'primary' : 'secondary' %> text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                        <i class="fas fa-<%= user.role === 'admin' ? 'user-shield' : 'user' %>"></i>
                                    </div>
                                    <div>
                                        <strong><%= user.full_name || 'Sin nombre' %></strong>
                                        <br><small class="text-muted"><%= user.email %></small>
                                    </div>
                                </div>
                            </td>
                            <td><%= user.phone || '-' %></td>
                            <td>
                                <span class="badge bg-<%= user.role === 'admin' ? 'primary' : 'secondary' %>">
                                    <%= user.role === 'admin' ? 'Admin' : 'Cliente' %>
                                </span>
                            </td>
                            <td><%= user.total_orders || 0 %></td>
                            <td>$<%= (user.total_spent || 0).toLocaleString('es-MX') %></td>
                            <td>
                                <% if (user.is_blocked) { %>
                                    <span class="badge bg-danger">Bloqueado</span>
                                <% } else { %>
                                    <span class="badge bg-success">Activo</span>
                                <% } %>
                            </td>
                            <td><%= new Date(user.created_at).toLocaleDateString('es-MX') %></td>
                            <td>
                                <a href="/admin/users/<%= user.id %>" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                        <% }) %>
                        <% if (users.length === 0) { %>
                        <tr>
                            <td colspan="8" class="text-center py-4">
                                <i class="fas fa-users text-muted mb-2" style="font-size: 2rem;"></i>
                                <p class="text-muted mb-0">No se encontraron usuarios</p>
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            
            <% if (pagination.totalPages > 1) { %>
            <nav class="mt-4">
                <ul class="pagination justify-content-center mb-0">
                    <% for (let i = 1; i <= pagination.totalPages; i++) { %>
                    <li class="page-item <%= pagination.page === i ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>&search=<%= filters.search || '' %>&role=<%= filters.role || '' %>&blocked=<%= filters.blocked || '' %>"><%= i %></a>
                    </li>
                    <% } %>
                </ul>
            </nav>
            <% } %>
        </div>
    </div>

    <%- include('../partials/admin-scripts') %>
</body>
</html>
