<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %> | Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>游꼺</text></svg>">
    <%- include('../partials/admin-styles') %>
</head>
<body>
    <%- include('../partials/admin-sidebar', { activePage: 'promotions' }) %>

    <div class="main-content">
        <%- include('../partials/admin-header', { title: 'Promociones' }) %>

        <!-- Promo Stats -->
        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-muted mb-1">Activas</p>
                            <h3><%= stats.active %></h3>
                        </div>
                        <div class="icon" style="background: rgba(16,185,129,0.1); color: #10B981;">
                            <i class="fas fa-fire"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-muted mb-1">Programadas</p>
                            <h3><%= stats.scheduled %></h3>
                        </div>
                        <div class="icon" style="background: rgba(59,130,246,0.1); color: #3B82F6;">
                            <i class="fas fa-clock"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-muted mb-1">Usos Totales</p>
                            <h3><%= stats.totalUses.toLocaleString() %></h3>
                        </div>
                        <div class="icon" style="background: rgba(244,167,0,0.1); color: #F4A700;">
                            <i class="fas fa-tags"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-muted mb-1">Descuentos Dados</p>
                            <h3>$<%= stats.totalDiscount.toLocaleString() %></h3>
                        </div>
                        <div class="icon" style="background: rgba(239,68,68,0.1); color: #EF4444;">
                            <i class="fas fa-percent"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Actions -->
        <div class="d-flex flex-wrap justify-content-between align-items-center mb-4 gap-3">
            <div class="btn-group">
                <a href="/admin/promotions?filter=active" class="btn btn-<%= filter === 'active' ? 'primary' : 'outline-secondary' %>">Activas</a>
                <a href="/admin/promotions?filter=scheduled" class="btn btn-<%= filter === 'scheduled' ? 'primary' : 'outline-secondary' %>">Programadas</a>
                <a href="/admin/promotions?filter=ended" class="btn btn-<%= filter === 'ended' ? 'primary' : 'outline-secondary' %>">Finalizadas</a>
                <a href="/admin/promotions" class="btn btn-<%= !filter ? 'primary' : 'outline-secondary' %>">Todas</a>
            </div>
            
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newPromoModal">
                <i class="fas fa-plus me-2"></i>Nueva Promoci칩n
            </button>
        </div>

        <!-- Promotions Grid -->
        <div class="row g-4">
            <% promotions.forEach(promo => { %>
            <div class="col-lg-6">
                <div class="table-card h-100">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <span class="badge bg-<%= promo.is_active ? 'success' : 'secondary' %> mb-2">
                                <%= promo.is_active ? 'Activa' : 'Inactiva' %>
                            </span>
                            <h5 class="mb-1">
                                <%= promoTypes[promo.type]?.icon || '游꾸' %>
                                <%= promo.name %>
                            </h5>
                            <small class="text-muted"><%= promoTypes[promo.type]?.name || promo.type %></small>
                        </div>
                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="dropdown">
                                <i class="fas fa-ellipsis-v"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/admin/promotions/<%= promo.id %>/edit"><i class="fas fa-edit me-2"></i>Editar</a></li>
                                <li>
                                    <form action="/admin/promotions/<%= promo.id %>/toggle" method="POST">
                                        <button type="submit" class="dropdown-item">
                                            <i class="fas fa-<%= promo.is_active ? 'pause' : 'play' %> me-2"></i>
                                            <%= promo.is_active ? 'Pausar' : 'Activar' %>
                                        </button>
                                    </form>
                                </li>
                                <li><a class="dropdown-item" href="/admin/promotions/<%= promo.id %>/duplicate"><i class="fas fa-copy me-2"></i>Duplicar</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form action="/admin/promotions/<%= promo.id %>/delete" method="POST" onsubmit="return confirm('쮼liminar esta promoci칩n?')">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="fas fa-trash me-2"></i>Eliminar
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                    
                    <div class="row g-3 mb-3">
                        <div class="col-6">
                            <div class="p-3 rounded" style="background: rgba(244,167,0,0.08);">
                                <small class="text-muted d-block">Descuento</small>
                                <strong class="text-amber">
                                    <% if (promo.discount_type === 'percentage') { %>
                                        <%= promo.discount_value %>%
                                    <% } else if (promo.discount_type === 'fixed') { %>
                                        $<%= promo.discount_value %>
                                    <% } else { %>
                                        Env칤o Gratis
                                    <% } %>
                                </strong>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="p-3 rounded" style="background: rgba(16,185,129,0.08);">
                                <small class="text-muted d-block">Usos</small>
                                <strong>
                                    <%= promo.current_uses || 0 %><% if (promo.max_uses) { %>/<%= promo.max_uses %><% } %>
                                </strong>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between align-items-center text-muted small">
                        <span>
                            <i class="fas fa-calendar-alt me-1"></i>
                            <% if (promo.ends_at) { %>
                                <% const endsAt = new Date(promo.ends_at); %>
                                <% const now = new Date(); %>
                                <% const daysLeft = Math.ceil((endsAt - now) / (1000*60*60*24)); %>
                                <% if (daysLeft > 0) { %>
                                    <%= daysLeft %> d칤as restantes
                                <% } else { %>
                                    Finalizada
                                <% } %>
                            <% } else { %>
                                Sin fecha de fin
                            <% } %>
                        </span>
                        <% if (promo.badge_text) { %>
                        <span class="badge bg-warning text-dark"><%= promo.badge_text %></span>
                        <% } %>
                    </div>
                </div>
            </div>
            <% }) %>
            
            <% if (promotions.length === 0) { %>
            <div class="col-12">
                <div class="table-card text-center py-5">
                    <i class="fas fa-tags text-muted mb-3" style="font-size: 3rem;"></i>
                    <h5>No hay promociones</h5>
                    <p class="text-muted">Crea tu primera promoci칩n para aumentar las ventas</p>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newPromoModal">
                        <i class="fas fa-plus me-2"></i>Crear Promoci칩n
                    </button>
                </div>
            </div>
            <% } %>
        </div>
    </div>

    <!-- New Promo Modal -->
    <div class="modal fade" id="newPromoModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Nueva Promoci칩n</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form action="/admin/promotions" method="POST">
                    <div class="modal-body">
                        <div class="row g-3">
                            <div class="col-md-8">
                                <label class="form-label">Nombre de la Promoci칩n *</label>
                                <input type="text" name="name" class="form-control" required placeholder="Ej: Flash Sale Fin de Semana">
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Tipo *</label>
                                <select name="type" class="form-select" required id="promoType">
                                    <option value="flash_sale">Flash Sale</option>
                                    <option value="bundle">Bundle/Combo</option>
                                    <option value="bogo">BOGO (2x1, 3x2)</option>
                                    <option value="tiered">Por Volumen</option>
                                    <option value="seasonal">Temporada</option>
                                    <option value="cart_value">Valor de Carrito</option>
                                    <option value="first_purchase">Primera Compra</option>
                                </select>
                            </div>
                            
                            <div class="col-md-4">
                                <label class="form-label">Tipo de Descuento *</label>
                                <select name="discount_type" class="form-select" required id="discountType">
                                    <option value="percentage">Porcentaje (%)</option>
                                    <option value="fixed">Monto Fijo ($)</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Valor *</label>
                                <div class="input-group">
                                    <span class="input-group-text" id="discountPrefix">%</span>
                                    <input type="number" name="discount_value" class="form-control" required min="0" step="0.01">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Prioridad</label>
                                <input type="number" name="priority" class="form-control" value="0" min="0" max="100">
                                <small class="text-muted">Mayor = m치s prioritaria</small>
                            </div>
                            
                            <div class="col-md-6">
                                <label class="form-label">Fecha Inicio *</label>
                                <input type="datetime-local" name="starts_at" class="form-control" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Fecha Fin</label>
                                <input type="datetime-local" name="ends_at" class="form-control">
                                <small class="text-muted">Dejar vac칤o para sin fecha l칤mite</small>
                            </div>
                            
                            <div class="col-md-6">
                                <label class="form-label">M칤nimo de Compra</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input type="number" name="min_cart_value" class="form-control" min="0" step="0.01">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">L칤mite de Usos</label>
                                <input type="number" name="max_uses" class="form-control" min="1" placeholder="Sin l칤mite">
                            </div>
                            
                            <div class="col-md-6">
                                <label class="form-label">Badge (Etiqueta)</label>
                                <input type="text" name="badge_text" class="form-control" placeholder="Ej: Flash Sale">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">URL de Landing</label>
                                <input type="text" name="landing_url" class="form-control" placeholder="/shop?promo=flash">
                            </div>
                            
                            <div class="col-12">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" name="stackable" id="stackable">
                                    <label class="form-check-label" for="stackable">Acumulable con otros descuentos</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Crear Promoci칩n
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include('../partials/admin-scripts') %>
    
    <script>
    document.getElementById('discountType').addEventListener('change', function() {
        document.getElementById('discountPrefix').textContent = this.value === 'percentage' ? '%' : '$';
    });
    
    // Set default start date to now
    const now = new Date();
    now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
    document.querySelector('input[name="starts_at"]').value = now.toISOString().slice(0, 16);
    </script>
</body>
</html>
