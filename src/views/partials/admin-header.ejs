<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-0"><%= title %></h2>
    </div>
    <div class="d-flex align-items-center gap-3">
        <% if (typeof isDemoMode !== 'undefined' && isDemoMode) { %>
        <span class="badge bg-warning text-dark">
            <i class="fas fa-info-circle me-1"></i>Modo Demo
        </span>
        <% } %>
        
        <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success alert-dismissible fade show py-2 px-3 mb-0" role="alert">
            <i class="fas fa-check-circle me-1"></i><%= success %>
            <button type="button" class="btn-close btn-sm" data-bs-dismiss="alert"></button>
        </div>
        <% } %>
        
        <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger alert-dismissible fade show py-2 px-3 mb-0" role="alert">
            <i class="fas fa-exclamation-circle me-1"></i><%= error %>
            <button type="button" class="btn-close btn-sm" data-bs-dismiss="alert"></button>
        </div>
        <% } %>
    </div>
</div>
