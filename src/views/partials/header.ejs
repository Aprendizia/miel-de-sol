<!-- MIEL DE SOL - Header -->
<header class="header" id="header">
    <div class="header__inner">
        <!-- Logo: Emblem + MIEL DE SOL -->
        <a href="/" class="header__logo">
            <svg class="header__logo-emblem" width="40" height="40" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
                <!-- Sun rays -->
                <path d="M50 5L55 20H45L50 5Z" fill="#C79A2A"/>
                <path d="M50 5L55 20H45L50 5Z" fill="#C79A2A" transform="rotate(30 50 50)"/>
                <path d="M50 5L55 20H45L50 5Z" fill="#C79A2A" transform="rotate(60 50 50)"/>
                <path d="M50 5L55 20H45L50 5Z" fill="#C79A2A" transform="rotate(90 50 50)"/>
                <path d="M50 5L55 20H45L50 5Z" fill="#C79A2A" transform="rotate(120 50 50)"/>
                <path d="M50 5L55 20H45L50 5Z" fill="#C79A2A" transform="rotate(150 50 50)"/>
                <path d="M50 5L55 20H45L50 5Z" fill="#C79A2A" transform="rotate(180 50 50)"/>
                <path d="M50 5L55 20H45L50 5Z" fill="#C79A2A" transform="rotate(210 50 50)"/>
                <path d="M50 5L55 20H45L50 5Z" fill="#C79A2A" transform="rotate(240 50 50)"/>
                <path d="M50 5L55 20H45L50 5Z" fill="#C79A2A" transform="rotate(270 50 50)"/>
                <path d="M50 5L55 20H45L50 5Z" fill="#C79A2A" transform="rotate(300 50 50)"/>
                <path d="M50 5L55 20H45L50 5Z" fill="#C79A2A" transform="rotate(330 50 50)"/>
                <!-- Hexagon -->
                <path d="M50 25L72 38V62L50 75L28 62V38L50 25Z" fill="#C79A2A" fill-opacity="0.15" stroke="#C79A2A" stroke-width="2"/>
                <!-- Bee silhouette -->
                <ellipse cx="50" cy="52" rx="12" ry="8" fill="#C79A2A"/>
                <ellipse cx="50" cy="44" rx="8" ry="6" fill="#C79A2A"/>
                <path d="M42 48L38 42M58 48L62 42" stroke="#C79A2A" stroke-width="2" stroke-linecap="round"/>
            </svg>
            <span class="header__logo-wordmark">MIEL <span>DE SOL</span></span>
        </a>
        
        <!-- Navigation -->
        <nav class="header__nav" id="mainNav">
            <a href="/shop" class="header__nav-link <%= currentPath === '/shop' || currentPath.startsWith('/shop') ? 'active' : '' %>">
                Shop
            </a>
            <a href="/shop?collection=solar" class="header__nav-link">
                Colección Solar
            </a>
            <a href="/aprende" class="header__nav-link <%= currentPath === '/aprende' ? 'active' : '' %>">
                Rituales
            </a>
            <a href="/about" class="header__nav-link <%= currentPath === '/about' ? 'active' : '' %>">
                Origen
            </a>
            <a href="/contact" class="header__nav-link <%= currentPath === '/contact' ? 'active' : '' %>">
                FAQ
            </a>
        </nav>
        
        <!-- Actions -->
        <div class="header__actions">
            <!-- Search -->
            <button class="header__action-btn" id="searchToggle" aria-label="Buscar">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="11" cy="11" r="8"></circle>
                    <path d="M21 21l-4.35-4.35"></path>
                </svg>
            </button>
            
            <!-- Account -->
            <% if (user) { %>
                <a href="/auth/profile" class="header__action-btn" aria-label="Mi cuenta">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                        <circle cx="12" cy="7" r="4"></circle>
                    </svg>
                </a>
            <% } else { %>
                <a href="/auth/login" class="header__action-btn" aria-label="Iniciar sesión">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                        <circle cx="12" cy="7" r="4"></circle>
                    </svg>
                </a>
            <% } %>
            
            <!-- Cart -->
            <a href="/cart" class="header__cart" aria-label="Carrito">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
                    <line x1="3" y1="6" x2="21" y2="6"></line>
                    <path d="M16 10a4 4 0 0 1-8 0"></path>
                </svg>
                <span class="header__cart-count" id="cartCount"><%= cartCount %></span>
            </a>
            
            <!-- Mobile Menu Toggle -->
            <button class="header__menu-btn" id="menuToggle" aria-label="Menú">
                <span></span>
            </button>
        </div>
    </div>
    
    <!-- Search Bar -->
    <div class="header__search" id="searchBar">
        <div class="container">
            <form action="/shop" method="GET" class="header__search-form">
                <div class="header__search-input-wrap">
                    <svg class="header__search-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="11" cy="11" r="8"></circle>
                        <path d="M21 21l-4.35-4.35"></path>
                    </svg>
                    <input type="text" name="search" placeholder="Buscar miel..." class="header__search-input" id="searchInput" autocomplete="off">
                </div>
                <button type="submit" class="btn btn-primary btn-sm">Buscar</button>
                <button type="button" class="header__search-close" id="searchClose">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </form>
            <div class="header__search-results" id="searchResults"></div>
        </div>
    </div>
</header>

<!-- Mobile Navigation Overlay -->
<div class="mobile-nav-overlay" id="mobileNavOverlay"></div>

<!-- Mobile Navigation -->
<div class="mobile-nav" id="mobileNav">
    <div class="mobile-nav__header">
        <span class="mobile-nav__brand">MIEL DE SOL</span>
        <button class="mobile-nav__close" id="mobileNavClose">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
        </button>
    </div>
    
    <nav class="mobile-nav__links">
        <a href="/" class="mobile-nav__link <%= currentPath === '/' ? 'active' : '' %>">Inicio</a>
        <a href="/shop" class="mobile-nav__link <%= currentPath.startsWith('/shop') ? 'active' : '' %>">Shop</a>
        <a href="/shop?collection=solar" class="mobile-nav__link">Colección Solar</a>
        <a href="/aprende" class="mobile-nav__link <%= currentPath === '/aprende' ? 'active' : '' %>">Rituales</a>
        <a href="/about" class="mobile-nav__link <%= currentPath === '/about' ? 'active' : '' %>">Origen</a>
        <a href="/contact" class="mobile-nav__link <%= currentPath === '/contact' ? 'active' : '' %>">FAQ</a>
    </nav>
    
    <div class="mobile-nav__divider"></div>
    
    <div class="mobile-nav__account">
        <% if (user) { %>
            <a href="/auth/profile" class="mobile-nav__link">Mi Cuenta</a>
            <a href="/auth/orders" class="mobile-nav__link">Mis Pedidos</a>
            <% if (user.role === 'admin') { %>
                <a href="/admin" class="mobile-nav__link">Admin</a>
            <% } %>
            <a href="/auth/logout" class="mobile-nav__link mobile-nav__link--logout">Cerrar Sesión</a>
        <% } else { %>
            <a href="/auth/login" class="btn btn-primary w-full">Iniciar Sesión</a>
            <a href="/auth/register" class="btn btn-secondary w-full" style="margin-top: 8px;">Crear Cuenta</a>
        <% } %>
    </div>
    
    <div class="mobile-nav__footer">
        <p class="mobile-nav__tagline">Luz en tu mesa.</p>
    </div>
</div>

<style>
