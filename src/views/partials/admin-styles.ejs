<style>
/* ==========================================
   MIEL DE SOL - ADMIN THEME
   Premium Light Mode (matching frontend)
   ========================================== */

/* Google Fonts - Brand Typography */
@import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;0,700;1,500&family=Inter:wght@300;400;500;600;700&display=swap');

:root {
    /* Brand Colors - Miel de Sol */
    --ivory: #F6F1E6;
    --ivory-pure: #FFFDF8;
    --charcoal: #141414;
    --gold: #C79A2A;
    --amber: #A56B1F;
    --sand: #E8DDC8;
    --sand-light: rgba(232, 221, 200, 0.5);
    --smoke: #6B6B6B;
    --night: #0F2437;
    --white: #FFFFFF;
    
    /* Legacy aliases */
    --modhu-gold: var(--gold);
    --modhu-amber: var(--gold);
    --modhu-honey-dark: var(--amber);
    
    /* Admin Theme - Light */
    --admin-bg: var(--ivory);
    --admin-bg-secondary: #EDE7DA;
    --admin-card: var(--ivory-pure);
    --admin-card-hover: var(--white);
    --admin-sidebar: var(--white);
    --admin-border: var(--sand);
    --admin-border-hover: var(--gold);
    
    /* Text */
    --text-primary: var(--charcoal);
    --text-secondary: var(--smoke);
    --text-muted: #9A9A9A;
    
    /* Status Colors */
    --success: #2D5A3D;
    --success-bg: #E8F2EB;
    --warning: #8B6818;
    --warning-bg: #FDF9EF;
    --danger: #8B3A38;
    --danger-bg: #FDEEED;
    --info: #1E5A8B;
    --info-bg: #E8F1F8;
    
    /* Typography */
    --font-display: 'Cormorant Garamond', Georgia, serif;
    --font-body: 'Inter', -apple-system, sans-serif;
    
    /* Spacing */
    --sidebar-width: 260px;
    --radius: 16px;
    --radius-sm: 8px;
    --radius-lg: 20px;
    --radius-pill: 999px;
    
    /* Effects */
    --shadow-soft: 0 8px 24px rgba(20,20,20,.04);
    --shadow-card: 0 2px 12px rgba(20,20,20,.03);
    --shadow-hover: 0 8px 24px rgba(20,20,20,.08);
    --ease: cubic-bezier(.2,.8,.2,1);
    
    /* Transitions */
    --transition-fast: 0.15s var(--ease);
    --transition-normal: 0.25s var(--ease);
}

/* ==========================================
   BASE STYLES
   ========================================== */

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: var(--font-body);
    background: var(--admin-bg);
    color: var(--text-primary);
    line-height: 1.6;
    min-height: 100vh;
    -webkit-font-smoothing: antialiased;
}

h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-display);
    font-weight: 500;
    color: var(--text-primary);
    letter-spacing: -0.01em;
}

a {
    color: var(--gold);
    text-decoration: none;
    transition: color var(--transition-fast);
}

a:hover {
    color: var(--amber);
}

/* ==========================================
   SIDEBAR
   ========================================== */

.sidebar {
    position: fixed;
    left: 0;
    top: 0;
    bottom: 0;
    width: var(--sidebar-width);
    background: var(--admin-sidebar);
    border-right: 1px solid var(--admin-border);
    z-index: 1000;
    display: flex;
    flex-direction: column;
    transition: transform 0.3s var(--ease);
    overflow-y: auto;
    box-shadow: var(--shadow-soft);
}

.sidebar .nav {
    padding: 16px 12px;
    flex: 1;
}

.sidebar .nav-label {
    display: block;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--text-muted);
    padding: 16px 16px 8px;
    margin-top: 8px;
}

.sidebar .nav-link {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    border-radius: var(--radius-sm);
    color: var(--text-secondary);
    font-size: 14px;
    font-weight: 500;
    transition: all var(--transition-normal);
    margin-bottom: 4px;
}

.sidebar .nav-link i {
    width: 20px;
    text-align: center;
    font-size: 15px;
    opacity: 0.7;
    transition: opacity var(--transition-fast);
}

.sidebar .nav-link:hover {
    background: rgba(199, 154, 42, 0.08);
    color: var(--text-primary);
}

.sidebar .nav-link:hover i {
    opacity: 1;
    color: var(--gold);
}

.sidebar .nav-link.active {
    background: rgba(199, 154, 42, 0.12);
    color: var(--gold);
    font-weight: 600;
}

.sidebar .nav-link.active i {
    opacity: 1;
    color: var(--gold);
}

.sidebar .nav-divider {
    height: 1px;
    background: var(--admin-border);
    margin: 16px 0;
}

/* ==========================================
   MAIN CONTENT
   ========================================== */

.main-content {
    margin-left: var(--sidebar-width);
    padding: 32px 40px;
    min-height: 100vh;
    background: var(--admin-bg);
}

/* Header */
.admin-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 32px;
    padding-bottom: 24px;
    border-bottom: 1px solid var(--admin-border);
}

.admin-header h1, .admin-header h2 {
    font-size: clamp(24px, 3vw, 32px);
    font-weight: 600;
    color: var(--text-primary);
}

/* ==========================================
   STAT CARDS
   ========================================== */

.stat-card {
    background: var(--admin-card);
    border: 1px solid var(--sand-light);
    border-radius: var(--radius);
    padding: 24px;
    position: relative;
    overflow: hidden;
    transition: all var(--transition-normal);
    box-shadow: var(--shadow-card);
}

.stat-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-hover);
    border-color: var(--gold);
}

.stat-card h3 {
    font-size: 28px;
    font-weight: 600;
    font-family: var(--font-display);
    margin: 8px 0;
    color: var(--text-primary);
}

.stat-card p {
    color: var(--text-secondary);
    font-size: 13px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.stat-card .icon {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    background: rgba(199, 154, 42, 0.1);
    color: var(--gold);
}

.stat-card small {
    color: var(--text-muted);
    font-size: 12px;
}

/* ==========================================
   TABLE CARDS
   ========================================== */

.table-card, .admin-card {
    background: var(--admin-card);
    border: 1px solid var(--sand-light);
    border-radius: var(--radius);
    padding: 24px;
    margin-bottom: 24px;
    box-shadow: var(--shadow-card);
}

.table-card h5, .admin-card h5 {
    font-family: var(--font-display);
    font-weight: 600;
    font-size: 18px;
    color: var(--text-primary);
    margin-bottom: 16px;
}

/* Tables */
.table {
    color: var(--text-primary);
    font-size: 14px;
}

.table thead th {
    background: var(--ivory);
    border-bottom: 1px solid var(--admin-border);
    color: var(--text-secondary);
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.8px;
    padding: 14px 16px;
}

.table tbody tr {
    transition: background var(--transition-fast);
}

.table tbody tr:hover {
    background: rgba(199, 154, 42, 0.04);
}

.table tbody td {
    border-bottom: 1px solid var(--sand-light);
    padding: 16px;
    vertical-align: middle;
}

/* ==========================================
   BUTTONS
   ========================================== */

.btn {
    font-family: var(--font-body);
    font-weight: 500;
    border-radius: var(--radius-pill);
    padding: 12px 24px;
    font-size: 14px;
    transition: all var(--transition-normal);
    border: 1px solid transparent;
    cursor: pointer;
}

.btn-primary, .btn-gold {
    background: var(--gold);
    color: var(--ivory);
    border-color: var(--gold);
}

.btn-primary:hover, .btn-gold:hover {
    background: var(--amber);
    border-color: var(--amber);
    color: var(--ivory);
    transform: translateY(-1px);
}

.btn-secondary {
    background: transparent;
    color: var(--charcoal);
    border-color: var(--sand);
}

.btn-secondary:hover {
    background: var(--sand);
    color: var(--charcoal);
}

.btn-outline-primary {
    border: 1px solid var(--gold);
    color: var(--gold);
    background: transparent;
}

.btn-outline-primary:hover {
    background: var(--gold);
    color: var(--ivory);
}

.btn-outline-secondary {
    border: 1px solid var(--sand);
    color: var(--text-secondary);
    background: transparent;
}

.btn-outline-secondary:hover {
    background: var(--sand);
    color: var(--text-primary);
}

.btn-outline-success {
    border: 1px solid var(--success);
    color: var(--success);
    background: transparent;
}

.btn-outline-success:hover {
    background: var(--success-bg);
}

.btn-outline-warning {
    border: 1px solid var(--warning);
    color: var(--warning);
    background: transparent;
}

.btn-outline-warning:hover {
    background: var(--warning-bg);
}

.btn-outline-danger {
    border: 1px solid var(--danger);
    color: var(--danger);
    background: transparent;
}

.btn-outline-danger:hover {
    background: var(--danger-bg);
}

.btn-outline-info {
    border: 1px solid var(--info);
    color: var(--info);
    background: transparent;
}

.btn-outline-info:hover {
    background: var(--info-bg);
}

.btn-sm {
    padding: 8px 16px;
    font-size: 13px;
}

.btn-lg {
    padding: 16px 32px;
    font-size: 16px;
}

/* ==========================================
   FORM CONTROLS
   ========================================== */

.form-control, .form-select {
    background: var(--white);
    border: 1px solid var(--sand);
    color: var(--text-primary);
    border-radius: var(--radius-sm);
    padding: 14px 16px;
    font-size: 14px;
    font-family: var(--font-body);
    transition: all var(--transition-fast);
}

.form-control:focus, .form-select:focus {
    background: var(--white);
    border-color: var(--gold);
    color: var(--text-primary);
    box-shadow: 0 0 0 3px rgba(199, 154, 42, 0.12);
    outline: none;
}

.form-control::placeholder {
    color: var(--text-muted);
}

.form-label {
    font-size: 13px;
    font-weight: 500;
    color: var(--text-primary);
    margin-bottom: 8px;
    display: block;
}

.form-check-input {
    background-color: var(--white);
    border-color: var(--sand);
}

.form-check-input:checked {
    background-color: var(--gold);
    border-color: var(--gold);
}

.form-switch .form-check-input {
    width: 40px;
    height: 22px;
}

.input-group-text {
    background: var(--ivory);
    border: 1px solid var(--sand);
    color: var(--text-secondary);
}

/* ==========================================
   BADGES
   ========================================== */

.badge {
    font-weight: 500;
    padding: 6px 12px;
    border-radius: var(--radius-pill);
    font-size: 12px;
}

.badge.bg-success, .bg-success {
    background: var(--success-bg) !important;
    color: var(--success) !important;
}

.badge.bg-warning, .bg-warning {
    background: var(--warning-bg) !important;
    color: var(--warning) !important;
}

.badge.bg-danger, .bg-danger {
    background: var(--danger-bg) !important;
    color: var(--danger) !important;
}

.badge.bg-info, .bg-info {
    background: var(--info-bg) !important;
    color: var(--info) !important;
}

.badge.bg-secondary, .bg-secondary {
    background: var(--sand) !important;
    color: var(--text-secondary) !important;
}

.badge.bg-primary, .bg-primary {
    background: rgba(199, 154, 42, 0.15) !important;
    color: var(--gold) !important;
}

/* ==========================================
   PRODUCT IMAGE
   ========================================== */

.product-img {
    width: 50px;
    height: 50px;
    object-fit: cover;
    border-radius: var(--radius-sm);
    border: 1px solid var(--sand);
}

/* ==========================================
   ALERTS
   ========================================== */

.alert {
    border: none;
    border-radius: var(--radius-sm);
    padding: 16px 20px;
    font-size: 14px;
}

.alert-success {
    background: var(--success-bg);
    color: var(--success);
    border: 1px solid rgba(45, 90, 61, 0.2);
}

.alert-warning {
    background: var(--warning-bg);
    color: var(--warning);
    border: 1px solid rgba(139, 104, 24, 0.2);
}

.alert-danger {
    background: var(--danger-bg);
    color: var(--danger);
    border: 1px solid rgba(139, 58, 56, 0.2);
}

.alert-info {
    background: var(--info-bg);
    color: var(--info);
    border: 1px solid rgba(30, 90, 139, 0.2);
}

/* ==========================================
   MODALS
   ========================================== */

.modal-content {
    background: var(--admin-card);
    border: 1px solid var(--sand);
    border-radius: var(--radius);
    box-shadow: var(--shadow-hover);
}

.modal-header {
    border-bottom: 1px solid var(--sand);
    padding: 20px 24px;
}

.modal-title {
    font-family: var(--font-display);
    font-weight: 600;
    font-size: 20px;
}

.modal-body {
    padding: 24px;
}

.modal-footer {
    border-top: 1px solid var(--sand);
    padding: 16px 24px;
}

.btn-close {
    opacity: 0.5;
}

.btn-close:hover {
    opacity: 1;
}

/* ==========================================
   PAGINATION
   ========================================== */

.pagination {
    gap: 4px;
}

.page-link {
    background: var(--white);
    border: 1px solid var(--sand);
    color: var(--text-secondary);
    border-radius: var(--radius-sm) !important;
    padding: 10px 16px;
}

.page-link:hover {
    background: rgba(199, 154, 42, 0.1);
    border-color: var(--gold);
    color: var(--gold);
}

.page-item.active .page-link {
    background: var(--gold);
    border-color: var(--gold);
    color: var(--ivory);
}

.page-item.disabled .page-link {
    background: var(--ivory);
    border-color: var(--sand);
    color: var(--text-muted);
}

/* ==========================================
   CHARTS
   ========================================== */

canvas {
    background: transparent !important;
}

/* ==========================================
   MOBILE RESPONSIVE
   ========================================== */

.sidebar-toggle {
    display: none;
    position: fixed;
    top: 16px;
    left: 16px;
    z-index: 1001;
    background: var(--white);
    border: 1px solid var(--sand);
    color: var(--text-primary);
    width: 44px;
    height: 44px;
    border-radius: var(--radius-sm);
    cursor: pointer;
    transition: all var(--transition-fast);
    box-shadow: var(--shadow-card);
}

.sidebar-toggle:hover {
    background: var(--gold);
    color: var(--ivory);
    border-color: var(--gold);
}

.sidebar-overlay {
    display: none;
    position: fixed;
    inset: 0;
    background: rgba(20, 20, 20, 0.5);
    z-index: 999;
    backdrop-filter: blur(4px);
}

@media (max-width: 1024px) {
    .sidebar {
        transform: translateX(-100%);
    }
    
    .sidebar.show {
        transform: translateX(0);
    }
    
    .sidebar-toggle {
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .sidebar-overlay.show {
        display: block;
    }
    
    .main-content {
        margin-left: 0;
        padding: 80px 20px 32px;
    }
}

@media (max-width: 768px) {
    .stat-card {
        padding: 20px;
    }
    
    .stat-card h3 {
        font-size: 24px;
    }
    
    .table-card {
        padding: 20px;
    }
    
    .admin-header h1, .admin-header h2 {
        font-size: 22px;
    }
    
    .main-content {
        padding: 80px 16px 24px;
    }
}

/* ==========================================
   UTILITY CLASSES
   ========================================== */

.text-gold {
    color: var(--gold);
}

.text-muted {
    color: var(--text-muted) !important;
}

.bg-light {
    background: var(--ivory) !important;
}

.border-gold {
    border-color: var(--gold) !important;
}

/* List group */
.list-group-item {
    background: transparent;
    border-color: var(--sand);
    color: var(--text-primary);
}

/* Dropdown */
.dropdown-menu {
    background: var(--white);
    border: 1px solid var(--sand);
    border-radius: var(--radius-sm);
    padding: 8px;
    box-shadow: var(--shadow-hover);
}

.dropdown-item {
    color: var(--text-secondary);
    border-radius: var(--radius-sm);
    padding: 10px 16px;
}

.dropdown-item:hover {
    background: rgba(199, 154, 42, 0.1);
    color: var(--gold);
}

/* Scrollbar */
::-webkit-scrollbar {
    width: 8px;
    height: 8px;
}

::-webkit-scrollbar-track {
    background: var(--ivory);
}

::-webkit-scrollbar-thumb {
    background: var(--sand);
    border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
    background: var(--text-muted);
}

/* Selection */
::selection {
    background: rgba(199, 154, 42, 0.3);
    color: var(--text-primary);
}

/* Card header helper */
.card-header {
    background: transparent;
    border-bottom: 1px solid var(--sand);
    padding: 16px 0;
    margin-bottom: 16px;
}

.card-header h5 {
    margin: 0;
}

.card-body {
    padding: 0;
}

/* Nav tabs override */
.nav-tabs {
    border-bottom: 1px solid var(--sand);
}

.nav-tabs .nav-link {
    border: none;
    color: var(--text-secondary);
    padding: 12px 20px;
    border-radius: var(--radius-sm) var(--radius-sm) 0 0;
}

.nav-tabs .nav-link:hover {
    border: none;
    color: var(--gold);
    background: rgba(199, 154, 42, 0.05);
}

.nav-tabs .nav-link.active {
    border: none;
    border-bottom: 2px solid var(--gold);
    color: var(--gold);
    background: transparent;
}

/* Tab content */
.tab-content {
    padding-top: 24px;
}
</style>
