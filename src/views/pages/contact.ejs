        }
        
        .form-layout {
            grid-template-columns: 1fr;
            gap: 40px;
        }
        
        .faq-sidebar {
            position: static;
        }
    }
    
    @media (max-width: 768px) {
        .contact-hero {
            padding: 120px 0 60px;
        }
        
        .contact-cards {
            grid-template-columns: 1fr;
            max-width: 360px;
            margin: 0 auto;
        }
        
        .form-wrapper {
            padding: 24px;
        }
        
        .form-row {
            grid-template-columns: 1fr;
        }
        
        .form-section {
            padding: 60px 0;
        }
    }
    </style>
</body>
</html>
