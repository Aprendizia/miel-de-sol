            <form action="/auth/forgot-password" method="POST" class="auth-form">
                <div class="form-group">
                    <label class="form-label" for="email">Correo electr√≥nico</label>
                    <input type="email" id="email" name="email" class="form-input" placeholder="tu@email.com" required>
                </div>
                
                <button type="submit" class="btn btn-primary btn-lg btn-full">
                    Enviar Instrucciones
                </button>
            </form>
            
            <p class="auth-footer">
                <a href="/auth/login">‚Üê Volver a Iniciar Sesi√≥n</a>
            </p>
        </div>
